<div class="container">
	<div class="eight columns">
		<div class="docs-section">
		<h6 class="docs-header">Getting started</h6>
			<p>Follow the instructions and authorize with your Fitbit account</p>
			<%= link_to "Connect with Fitbit", auth_fitbit_path, :class=>"button" %>
			<%= link_to "Check Dashboard", root_path,:class=>"button button-primary" %>
		</div>
	</div>
</div>


<div class="container">
	<div class="navbar-spacer"></div>
	<nav class="navbar">
		<div class="container">
			<ul class = "navbar-list">
				<li class="navbar-item"><a class="navbar-link" href="#intro">Intro</a></li>
				<li class="navbar-item"><a class="navbar-link" href="#sleep">Sleep</a></li>
				<li class="navbar-item"><a class="navbar-link" href="#activity">Activities</a></li>
			</ul>
		</div>
	</nav>

	<div class="docs-section" id="intro">
		<h6 class="docs-header">Participant Intro</h6>
		<table class="u-full-width">
			<thead>
				<tr>
					<th>Name</th>
					<th>Gender</th>
					<th>Date of Birth</th>
				</tr>
			</thead>
			<tbody>
				<% @usernames.each do |u| %>
				<tr>
					<td><%= u %></td>
				<tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="container">
<% @sleepCharts.each do |sc| %>
<div class="docs-section" id="sleep">
	<%= high_chart("some_id", sc) %>
</div>
<% end %>
</div>

<div class="container">
<% @activityCharts.each do |ac| %>
<div class="docs-section" id="activity">
	<%= high_chart("some_id_2", ac) %>
</div>
<% end %>
</div>